{{define "title"}}{{.Title}}{{end}}
{{define "head"}}
<link rel="stylesheet" href="/static/css/cards.css"/>
{{end}}
{{define "main"}}
<div id="cardbox">
  {{range .Cards}}
    <a class="card" href="{{.Path}}">
      <img src="{{with .Image}}{{.}}{{end}}" alt="{{.Title}} image"/>
      <h2>{{.Title}}</h2>
    </a>
  {{end}}
</div>
{{end}}
